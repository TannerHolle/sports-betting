    "backend:local": "cd backend && npm run local"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "axios": "^1.5.0",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.3.4",
    "vite": "^4.4.9"
  }
}
